<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin-dashboard.css">
    <link rel="stylesheet" href="/css/admin-inquiries.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <%- include('./partials/sidebar') %>
        
        <main class="main-content">
            <%- include('./partials/header') %>
            
            <div class="dashboard-content">
                <div class="inquiries-header">
                    <h1>Inquiries Management</h1>
                    <div class="filter-actions">
                        <div class="filter-group">
                            <div class="search-input-wrapper">
                                <i class="fas fa-search search-icon"></i>
                                <input 
                                    type="text" 
                                    id="searchInput" 
                                    class="search-input" 
                                    placeholder="Search inquiries..."
                                >
                            </div>
                            <select id="dateFilter" class="filter-select">
                                <option value="">Date Range</option>
                                <option value="today">Today</option>
                                <option value="week">This Week</option>
                                <option value="month">This Month</option>
                            </select>
                            <select id="sortOrder" class="filter-select">
                                <option value="-createdAt">Latest First</option>
                                <option value="createdAt">Oldest First</option>
                            </select>
                            <select id="statusFilter" class="filter-select">
                                <option value="">All Status</option>
                                <option value="pending">Pending</option>
                                <option value="in-progress">In Progress</option>
                                <option value="follow-up">Follow Up</option>
                                <option value="closed">Closed</option>
                            </select>
                            <select id="countryFilter" class="filter-select">
                                <option value="">All Countries</option>
                                <option value="asc">Sort A-Z</option>
                                <option value="desc">Sort Z-A</option>
                                <!-- Populated by JavaScript -->
                            </select>
                            <button class="refresh-btn" onclick="resetFilters()">
                                <i class="fas fa-sync-alt"></i>
                            </button>
                        </div>
                        <div class="action-group">
                            <button class="export-btn" onclick="exportData('csv')">
                                <i class="fas fa-file-csv"></i> CSV
                            </button>
                            <button class="export-btn" onclick="exportData('excel')">
                                <i class="fas fa-file-excel"></i>Excel
                            </button>
                        </div>
                    </div>
                </div>

                <div class="inquiries-table-container">
                    <!-- Table for desktop view -->
                    <table class="inquiries-table">
                        <thead>
                            <tr>
                                <th>Contact Info</th>
                                <th>Company & Country</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="inquiriesTableBody">
                            <!-- Populated by JavaScript -->
                        </tbody>
                    </table>
                    <!-- Mobile cards will be inserted here by JavaScript -->
                </div>

                <div class="pagination">
                    <button class="pagination-btn" id="prevPage">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <div class="page-numbers" id="pageNumbers">
                        <!-- Populated by JavaScript -->
                    </div>
                    <button class="pagination-btn" id="nextPage">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </main>
    </div>

    <!-- Status Update Modal -->
    <div class="modal" id="statusModal">
        <div class="modal-content">
            <h2>Update Status</h2>
            <select id="statusUpdate" class="status-select">
                <option value="new">New</option>
                <option value="in-progress">In Progress</option>
                <option value="followed-up">Followed Up</option>
                <option value="closed">Closed</option>
            </select>
            <div class="modal-actions">
                <button class="cancel-btn" onclick="closeModal()">Cancel</button>
                <button class="save-btn" onclick="updateStatus()">Save</button>
            </div>
        </div>
    </div>

    <script src="/js/admin-dashboard.js"></script>
    <script src="/js/admin-inquiries.js"></script>
    <script src="/js/admin-header.js"></script>
</body>
</html> 