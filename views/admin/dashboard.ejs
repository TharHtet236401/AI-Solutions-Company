<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin-dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <%- include('./partials/sidebar') %>
        
        <main class="main-content">
            <%- include('./partials/header') %>
            
            <div class="dashboard-content">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-calendar-day"></i>
                        </div>
                        <div class="stat-info">
                            <h3>Today's Inquiries</h3>
                            <div class="stat-number" id="todayInquiries">0</div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-calendar-week"></i>
                        </div>
                        <div class="stat-info">
                            <h3>This Week</h3>
                            <div class="stat-number" id="weekInquiries">0</div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="stat-info">
                            <h3>This Month</h3>
                            <div class="stat-number" id="monthInquiries">0</div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stat-info">
                            <h3>Pending</h3>
                            <div class="stat-number" id="pendingInquiries">0</div>
                        </div>
                    </div>
                </div>

                <div class="dashboard-grid">
                    <div class="recent-inquiries card">
                        <div class="card-header">
                            <h2>Recent Inquiries</h2>
                            <a href="/admin/inquiries" class="view-all">View All</a>
                        </div>
                        <div class="table-responsive">

                            <table>
                                <thead>
                                    <tr>
                                        <th>Contact Info</th>
                                        <th>Company & Job</th>
                                        <th>Country</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody id="recentInquiriesList">
                                    <!-- Will be populated by JavaScript -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <div class="right-column">
                        <div class="status-distribution card">
                            <div class="card-header">
                                <h2>Status Distribution</h2>
                            </div>
                            <div class="status-stats">
                                <div class="status-item">
                                    <span class="status-badge pending">Pending</span>
                                    <span class="status-count" id="pendingCount">0</span>
                                </div>
                                <div class="status-item">
                                    <span class="status-badge in-progress">In Progress</span>
                                    <span class="status-count" id="inProgressCount">0</span>
                                </div>
                                <div class="status-item">
                                    <span class="status-badge followed-up">Followed Up</span>
                                    <span class="status-count" id="followedUpCount">0</span>
                                </div>
                                <div class="status-item">
                                    <span class="status-badge closed">Closed</span>
                                    <span class="status-count" id="closedCount">0</span>
                                </div>
                            </div>
                        </div>

                        <div class="geo-distribution card">
                            <div class="card-header">
                                <h2>Top Countries</h2>
                            </div>
                            <div class="country-list" id="topCountries">
                                <!-- Populated by JavaScript -->
                            </div>
                        </div>

                        <div class="performance-metrics card">
                            <div class="card-header">
                                <h2>Response Metrics</h2>
                            </div>
                            <div class="metrics-grid">
                                <div class="metric-item">
                                    <h4>Average Response Time</h4>
                                    <div class="metric-value" id="avgResponseTime">--</div>
                                </div>
                                <div class="metric-item">
                                    <h4>Resolution Rate</h4>
                                    <div class="metric-value" id="resolutionRate">--</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="/js/admin-dashboard.js"></script>
    <script src="/js/admin-header.js"></script>
</body>
</html> 