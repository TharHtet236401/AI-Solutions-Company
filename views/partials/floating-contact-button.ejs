    box-shadow: 0 4px 12px rgba(41, 98, 255, 0.2);
}

.typing-indicator {
    padding: 12px 16px;
    background: white;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    margin-right: auto;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.typing-indicator span {
    width: 8px;
    height: 8px;
    background: #2962ff;
    border-radius: 50%;
    display: inline-block;
    margin: 0 2px;
