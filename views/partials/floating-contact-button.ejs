    padding: 20px;
    display: flex;
    gap: 12px;
    background: white;
    border-top: 1px solid #eef2f7;
}

.chat-input input {
    flex-grow: 1;
    padding: 12px 16px;
    border: 2px solid #e8ecf3;
    border-radius: 25px;
    font-size: 0.95em;
    transition: all 0.3s ease;
    color: #2c3e50;
}

.chat-input input:focus {
    outline: none;
    border-color: #2962ff;
