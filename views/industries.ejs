                    </div>
                    <!-- Retail -->
                    <div class="industry-slide">
                        <div class="industry-item">
                            <div class="industry-icon">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <div class="industry-content">
                                <h3>Retail</h3>
                                <p>Revolutionizing shopping experiences with AI solutions</p>
                                <!-- Retail Achievements -->
                                <div class="achievement-badges">
                                    <div class="badge">
                                        <i class="fas fa-chart-line"></i>
                                        <div class="badge-content">
                                            <span class="badge-value">55%</span>
                                            <span class="badge-label">Sales Growth</span>
                                        </div>
                                    </div>
                                    <div class="badge">
                                        <i class="fas fa-users"></i>
                                        <div class="badge-content">
                                            <span class="badge-value">85%</span>
                                            <span class="badge-label">Customer Satisfaction</span>
                                        </div>
                                    </div>
                                </div>
                                <ul class="industry-features">
                                    <li><i class="fas fa-check"></i> Inventory Management</li>
                                    <li><i class="fas fa-check"></i> Customer Analytics</li>
                                    <li><i class="fas fa-check"></i> Personalized Marketing</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Technology -->
                    <div class="industry-slide">
                        <div class="industry-item">
                            <div class="industry-icon">
                                <i class="fas fa-microchip"></i>
                            </div>
                            <div class="industry-content">
                                <h3>Technology</h3>
                                <p>Accelerating innovation with cutting-edge AI solutions</p>
                                <!-- Technology Achievements -->
                                <div class="achievement-badges">
                                    <div class="badge">
                                        <i class="fas fa-code"></i>
                                        <div class="badge-content">
                                            <span class="badge-value">70%</span>
