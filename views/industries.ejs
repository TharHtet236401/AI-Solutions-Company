<body class="industries-page">
    <%- include('partials/nav-bar') %>

    <!-- Hero Section - Updated with animated background and floating elements -->
    <section class="industries-hero fade-in-section">
        <div class="animated-bg">
            <div class="circuit-lines"></div>
            <div class="floating-shapes">
                <div class="shape shape-1"></div>
                <div class="shape shape-2"></div>
                <div class="shape shape-3"></div>
            </div>
        </div>
        <div class="hero-content">
            <h1>Transforming Industries</h1>
            <p>Pioneering AI Solutions Across Sectors</p>
            <div class="hero-stats">
                <div class="stat-pill">
                    <i class="fas fa-chart-line"></i>
                    <div class="stat-text">
                        <span class="stat-number">45%</span>
                        <span class="stat-label">Cost Reduction</span>
                    </div>
                </div>
                <div class="stat-pill">
                    <i class="fas fa-clock"></i>
                    <div class="stat-text">
                        <span class="stat-number">60%</span>
                        <span class="stat-label">Time Saved</span>
                    </div>
                </div>
