<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <%- include('partials/nav-bar') %>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">Transforming Workplaces Through AI Innovation</h1>
            <p class="hero-subtitle">Sunderland's Leading AI Technology Partner</p>
            <div class="hero-cta">
                <a href="/contact" class="cta-button primary">Get Started</a>
                <a href="/solutions" class="cta-button secondary">View Solutions</a>
            </div>
        </div>
        <div class="hero-visual">
            <div class="hero-shapes">
                <div class="shape shape-1"></div>
                <div class="shape shape-2"></div>
                <div class="shape shape-3"></div>
            </div>
        </div>
    </section>

    <!-- Key Features Section -->
    <section class="features-section">
        <div class="section-header">
            <h2>Our Core Solutions</h2>
            <p>Empowering businesses with cutting-edge AI technology</p>
        </div>
        <div class="features-container">
            <div class="feature-box">
                <div class="feature-icon">
                    <i class="fas fa-robot"></i>
                </div>
                <h3>AI Virtual Assistant</h3>
                <p>24/7 intelligent support system providing instant solutions</p>
                <a href="/solutions#ai-assistant" class="feature-link">Learn More →</a>
            </div>

            <div class="feature-box">
                <div class="feature-icon">
                    <i class="fas fa-lightbulb"></i>
                </div>
                <h3>Rapid Prototyping</h3>
                <p>Transform ideas into reality with AI-powered solutions</p>
                <a href="/solutions#prototyping" class="feature-link">Learn More →</a>
            </div>

            <div class="feature-box">
                <div class="feature-icon">
                    <i class="fas fa-users-cog"></i>
                </div>
                <h3>Employee Experience</h3>
                <p>Enhanced digital workplace solutions for modern teams</p>
                <a href="/solutions#employee-exp" class="feature-link">Learn More →</a>
            </div>
        </div>
    </section>

    <!-- Stats Section with Animation -->
    <section class="stats-section">
        <div class="stats-container">
            <div class="stat-box">
                <div class="stat-number" data-target="95">0</div>
                <div class="stat-label">Employee Satisfaction</div>
                <div class="stat-symbol">%</div>
            </div>
            <div class="stat-box">
                <div class="stat-number" data-target="500">0</div>
                <div class="stat-label">Businesses Empowered</div>
                <div class="stat-symbol">+</div>
            </div>
            <div class="stat-box">
                <div class="stat-number" data-target="60">0</div>
                <div class="stat-label">Cost Reduction</div>
                <div class="stat-symbol">%</div>
            </div>
        </div>
    </section>

    <!-- Latest Projects Showcase -->
    <section class="projects-section">
        <div class="section-header">
            <h2>Latest Innovations</h2>
            <p>See how we're transforming businesses</p>
        </div>
        <div class="projects-grid">
            <div class="project-card">
                <div class="project-image">
                    <img src="/images/project1.jpg" alt="Smart Assistant">
                </div>
                <div class="project-content">
                    <span class="project-category">AI Assistant</span>
                    <h3>Smart Workplace Assistant</h3>
                    <p>Next-generation AI assistant for modern workplaces</p>
                    <a href="/case-studies/smart-assistant" class="project-link">View Case Study →</a>
                </div>
            </div>
            <!-- Add more project cards -->
        </div>
    </section>

    <!-- Local Impact Section -->
    <section class="impact-section">
        <div class="impact-content">
            <div class="impact-text">
                <h2>Our Impact in Sunderland</h2>
                <p>Driving innovation in the North East through AI technology</p>
                <ul class="impact-list">
                    <li><i class="fas fa-check-circle"></i> Creating high-tech employment opportunities</li>
                    <li><i class="fas fa-check-circle"></i> Supporting local business growth</li>
                    <li><i class="fas fa-check-circle"></i> Developing next-gen tech talent</li>
                </ul>
                <a href="/about" class="impact-link">Read Our Story →</a>
            </div>
            <div class="impact-image">
                <img src="/images/sunderland-tech.jpg" alt="Sunderland Tech Hub">
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta-section">
        <div class="cta-content">
            <h2>Ready to Transform Your Workplace?</h2>
            <p>Join hundreds of businesses already benefiting from our AI solutions</p>
            <div class="cta-buttons">
                <a href="/contact" class="cta-button primary">Get Started</a>
                <a href="/solutions" class="cta-button secondary">Explore Solutions</a>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <!-- Add this script for stat counter animation -->
    <script>
        const stats = document.querySelectorAll('.stat-number');
        
        stats.forEach(stat => {
            const target = parseInt(stat.getAttribute('data-target'));
            const increment = target / 50;
            let current = 0;

            const updateCount = () => {
                if(current < target) {
                    current += increment;
                    stat.textContent = Math.ceil(current);
                    setTimeout(updateCount, 30);
                } else {
                    stat.textContent = target;
                }
            };

            updateCount();
        });
    </script>
</body>
</html>
